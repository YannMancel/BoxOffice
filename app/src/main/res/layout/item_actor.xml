<?xml version="1.0" encoding="utf-8"?>

<!-- MaterialCardView: For the user's interactions -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/item_actor_CardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- ConstraintLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- ImageView: Image of actor -->
        <ImageView
            android:id="@+id/item_actor_image"
            android:layout_width="@dimen/size_image_item_actor_width"
            android:layout_height="@dimen/size_image_item_actor_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@null"
            android:src="@drawable/ic_person"/>

        <!-- ImageView: Filter -->
        <ImageView
            android:id="@+id/filter"
            android:layout_width="0dp"
            android:layout_height="@dimen/filter_actor_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/item_actor_image"
            app:layout_constraintEnd_toEndOf="@id/item_actor_image"
            android:contentDescription="@null"
            android:background="@android:color/black"
            android:alpha="@integer/opacity_filter"/>

        <!-- TextView: Full name of actor -->
        <TextView
            android:id="@+id/item_actor_full_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            app:layout_constraintTop_toTopOf="@id/filter"
            app:layout_constraintBottom_toBottomOf="@id/filter"
            app:layout_constraintStart_toStartOf="@id/item_actor_image"
            app:layout_constraintEnd_toEndOf="@id/item_actor_image"
            style="@style/TextViewStyle"
            tools:text="@tools:sample/full_names"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
