<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Drawer arrow -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!-- NoActionBar with DarkActionBar theme. -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- *********************************** Toolbar ******************************************* -->

    <!-- Drawer arrow style -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- Toolbar style -->
    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- *********************************** TextView ****************************************** -->

    <!-- One line TextView sub-style -->
    <style name="OneLineTextViewSubStyle" parent="AppTheme">
        <item name="android:maxLines">@integer/one_line_text_view</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- TextView style (level 1, black, normal) -->
    <style name="TextViewStyle1" parent="OneLineTextViewSubStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- TextView style (level 2, grey, italic) -->
    <style name="TextViewStyle2" parent="OneLineTextViewSubStyle">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- *********************************** RatingBar ***************************************** -->

    <!-- RatingBar style (small) -->
    <style name="RatingBarStyle1" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">@integer/max_stars_rating_bar</item>
    </style>

    <!-- RatingBar style (normal) -->
    <style name="RatingBarStyle2" parent="Widget.AppCompat.RatingBar">
        <item name="android:numStars">@integer/max_stars_rating_bar</item>
    </style>

</resources>
