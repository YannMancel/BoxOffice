
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- NoActionBar with DarkActionBar theme. -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- *********************************** Toolbar ******************************************* -->

    <!-- Toolbar style -->
    <style name="ToolbarStyle" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- *********************************** TextView ****************************************** -->

    <!-- TextView style -->
    <style name="TextViewStyle" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- *********************************** RatingBar ***************************************** -->

    <!-- RatingBar style (small) -->
    <style name="RatingBarStyle1" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">@integer/max_stars_rating_bar</item>
    </style>

    <!-- RatingBar style (normal) -->
    <style name="RatingBarStyle2" parent="Widget.AppCompat.RatingBar">
        <item name="android:numStars">@integer/max_stars_rating_bar</item>
    </style>

</resources>
